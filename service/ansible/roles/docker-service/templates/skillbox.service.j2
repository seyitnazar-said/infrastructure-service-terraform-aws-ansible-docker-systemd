[Unit]
Description=docker app service named skillbox
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker run --name=app -p 8080:8080 skillbox/app:v1
ExecStop=/usr/bin/docker stop app
ExecStartPre=/usr/bin/docker rm -f app || true
Restart=always

[Install]
WantedBy=multi-user.target